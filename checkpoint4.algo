ALGORITHM sorting

VAR

    arr : ARRAY_OF INTEGER [50] ;
    i,j,n := 0 : INTEGER ;

BEGIN
    
    FOR i FROM 1 TO arr.length-1 STEP step  DO  

    n = arr[i]  
    j = i - 1

    WHILE (j>= 0 AND arr[j]>n) DO

        arr[j+1] = arr [j]
        j = j-1
        
    END_WHILE  

    arr [j +1] = n 

    END_FOR

END
